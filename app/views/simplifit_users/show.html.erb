<div class="page-header">
  <h1><%= @user.first_name %>'s Profile <small>(Badges Here?)</small></h1>
</div>

<div class="media">
  <div class="media-left">
     <%= image_tag @user.gravatar_url(default: "http://placehold.it/64x64") %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= @user.first_name %> <%= @user.last_name %></h4>
    <span class='quiet'><%= @user.department.name %></span>
  </div>
</div>