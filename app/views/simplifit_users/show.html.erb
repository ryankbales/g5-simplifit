<div class="page-header">
  <h1><%= @simplifit_user.first_name %>'s Profile <small>(Badges Here?)</small></h1>
</div>
<div class="row">
  <div class="col-sm-4 col-md-2">
    <div class="thumbnail">
      <%= image_tag(@simplifit_user.user_avatar, class: "img-responsive img-thumbnail") if @simplifit_user.user_avatar %>
      <div class="caption">
        <h3><%= @simplifit_user.first_name %> <%= @simplifit_user.last_name %></h3>
	    	<p class='quiet'><%= @simplifit_user.department.name %></p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>
  <div class="col-md-9"><%= render 'workouts/form' %></div>
</div>
<div class="row">
  <%= render 'workout_tracker' %>
</div>