<%= render 'shared/errors', obj: @user %>

<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :gender %>
      <%= f.select :gender, ['Male', 'Female'] %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-10'>
      <% Department.all.each do |department| %>
        <%= f.radio_button :department_id, department.id %>
        <%= f.label :department_id, department.name %>
      <% end %>
    </div>
  </div>
  <!-- <div class='form-group'>
    <div class='col-sm-10'>
      <%#= f.time_zone_select :timezone, nil, default: "Pacific Time (US & Canada)", include_blank: true %>
    </div>
  </div> -->
  <div class='form-group'>
  	<div class="col-sm-10">
	    <%= f.submit(@user.new_record? ? "Register" : "Update Profile", class: 'btn btn-success') %>
	  </div>
  </div>
<% end %>