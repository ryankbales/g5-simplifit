<div class="well">
	<p class="lead">Enter Todays Workout:</p>
	<%= form_for [@user, @workout], html: {class: 'form-inline'} do |f|%>
		<div class="form-group">
			<%= f.label :workout_category_id %>
			<%= select_tag(:workout_category_id, options_for_select([['Cardio', 1], ['Weights', 2]]), class: 'form-control') %>
		</div>
		<div class="form-group">
			<%= f.label :duration %>
			<%= f.number_field :duration, placeholder: "minutes", class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.submit "Submit Workout", class: "btn btn-success" %>
		</div>
	<% end %>
</div>
