<%= render 'shared/errors', obj: @department %>

<%= form_for @department, html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <div class='col-sm-10'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
  	<div class="col-sm-10">
	    <%= f.submit(@department.new_record? ? "Create Department" : "Update Department", class: 'btn btn-success') %>
	  </div>
  </div>
<% end %>